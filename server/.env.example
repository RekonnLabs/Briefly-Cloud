# LLM & Vector Store
OPENAI_API_KEY=your_openai_api_key_here
CHROMA_CLOUD_URL=https://api.trychroma.com/v1
CHROMA_API_KEY=your_chroma_api_key_here
CHROMA_TENANT_ID=your_chroma_tenant_id_here
CHROMA_DB_NAME=Briefly Cloud

# Supabase
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE=your_supabase_service_role_key_here

# Stripe
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Microsoft Azure OAuth
AZURE_CLIENT_ID=your_azure_client_id_here
AZURE_CLIENT_SECRET=your_azure_client_secret_here

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=True
ENVIRONMENT=development

# CORS Configuration
ALLOWED_ORIGINS=https://rekonnlabs.com,https://www.rekonnlabs.com,http://localhost:5173,http://localhost:3000

# Frontend URL for OAuth redirects
FRONTEND_URL=https://rekonnlabs.com

# OAuth Redirect URIs (update these in your OAuth app configurations)
GOOGLE_REDIRECT_URI=https://briefly-cloud-backend.vercel.app/api/storage/google/callback
MICROSOFT_REDIRECT_URI=https://briefly-cloud-backend.vercel.app/api/storage/microsoft/callback

# File Upload Limits
MAX_FILE_SIZE_MB=50
MAX_FILES_PER_USER=1000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Session Configuration
SESSION_SECRET_KEY=your_session_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here
TOKEN_EXPIRY_HOURS=24

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/briefly_cloud.log

# Cache Configuration (Optional - for future Redis integration)
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=3600

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
FROM_EMAIL=noreply@brieflycloud.com

# Vector Store Configuration
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_DIMENSIONS=3072
VECTOR_STORE_PROVIDER=chroma
MAX_CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# AI Model Configuration
DEFAULT_LLM_MODEL=gpt-4o
DEFAULT_LLM_TEMPERATURE=0.7
MAX_TOKENS=4000
CONTEXT_WINDOW_SIZE=8000

# Security Settings
ENCRYPTION_KEY=your_encryption_key_here
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_DEBUG=true
ENABLE_FILE_UPLOAD=true
ENABLE_CHAT=true
ENABLE_VECTOR_SEARCH=true
ENABLE_OAUTH=true

# Database Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

