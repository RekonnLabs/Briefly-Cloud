{
  "name": "briefly-cloud",
  "version": "1.0.0",
  "description": "AI-powered productivity assistant with unified Next.js architecture",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:security": "eslint . --config .eslintrc.security.js --ext .ts,.tsx,.js,.jsx",
    "lint:security:fix": "eslint . --config .eslintrc.security.js --ext .ts,.tsx,.js,.jsx --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:security": "jest --config jest.security.config.js --runInBand",
    "test:security:auth": "jest --config jest.security.config.js --testPathPattern=auth --runInBand",
    "test:security:rls": "jest --config jest.security.config.js --testPathPattern=rls --runInBand",
    "test:security:rate-limiting": "jest --config jest.security.config.js --testPathPattern=rate-limiting --runInBand",
    "test:security:audit": "jest --config jest.security.config.js --testPathPattern=audit --runInBand",
    "test:security:monitoring": "jest --config jest.security.config.js --testPathPattern=monitoring --runInBand",
    "test:security:integration": "jest --config jest.security.config.js --testPathPattern=integration --runInBand",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "security:audit": "npm audit --audit-level=moderate",
    "security:audit:fix": "npm audit fix",
    "security:scan": "semgrep --config=.semgrep.yml src/",
    "security:scan:ci": "semgrep --config=.semgrep.yml --json --output=semgrep-results.json src/",
    "security:secrets": "trufflehog filesystem . --only-verified",
    "security:report": "node scripts/generate-security-report.js",
    "security:pipeline": "node scripts/run-security-pipeline.js",
    "security:pipeline:ci": "node scripts/run-security-pipeline.js --verbose",
    "security:validate": "npm run lint:security && npm run security:audit && npm run security:scan",
    "validate:security": "node scripts/validate-security.js",
    "validate:environment": "node scripts/validate-environment.js",
    "validate:build-security": "node scripts/validate-build-security.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "backup:init": "node scripts/initialize-backup-system.js",
    "backup:cleanup": "node scripts/cleanup-old-backups.js",
    "backup:cleanup:dry-run": "node scripts/cleanup-old-backups.js --dry-run",
    "backup:validate": "node scripts/validate-backups.js",
    "backup:validate:quick": "node scripts/validate-backups.js --quick",
    "test:security:regression": "node scripts/security-regression-tests.js --regression-only",
    "test:security:performance": "node scripts/security-regression-tests.js --performance-only",
    "test:security:full": "node scripts/security-regression-tests.js",
    "security:gates": "npm run test:security && npm run lint:security && npm run security:audit",
    "security:gates:ci": "npm run test:security && npm run lint:security && npm run security:audit && npm run test:security:regression",
    "setup:branch-protection": "node scripts/setup-branch-protection.js",
    "setup:branch-protection:validate": "node scripts/setup-branch-protection.js --validate",
    "security:gate:validate": "node scripts/security-gate-validator.js",
    "deployment:security:gate": "node scripts/deployment-security-gate.js",
    "deployment:security:gate:staging": "node scripts/deployment-security-gate.js --env=staging",
    "deployment:security:gate:production": "node scripts/deployment-security-gate.js --env=production",
    "security:config:monitor": "node scripts/security-config-monitor.js",
    "security:config:snapshot": "node scripts/security-config-monitor.js --snapshot",
    "security:config:validate": "node scripts/security-config-monitor.js --validate",
    "security:config:report": "node scripts/security-config-monitor.js --report",
    "clean": "node scripts/clean-build.js",
    "clean:build": "node scripts/clean-build.js && npm run build",
    "test:security:minimal": "node scripts/run-minimal-security-tests.js",
    "launch:checklist": "node scripts/launch-checklist.js"
  },
  "keywords": [
    "ai",
    "productivity",
    "documents",
    "chat",
    "nextjs",
    "typescript",
    "openai",
    "vector-search"
  ],
  "author": "RekonnLabs",
  "license": "MIT",
  "dependencies": {
    "@azure/msal-node": "^3.7.0",
    "@radix-ui/react-accordion": "^1.2.11",
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toast": "^1.2.14",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@sentry/nextjs": "^8.15.0",
    "@supabase/supabase-js": "^2.54.0",
    "@vercel/analytics": "^1.2.2",
    "axios": "^1.11.0",
    "chromadb": "^3.0.10",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.1",
    "formidable": "^3.5.4",
    "googleapis": "^155.0.0",
    "lru-cache": "^10.2.0",
    "lucide-react": "^0.537.0",
    "mammoth": "^1.10.0",
    "next": "15.4.6",
    "openai": "^5.12.0",
    "pdf-parse": "^1.1.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "stripe": "^18.4.0",
    "tailwind-merge": "^3.3.1",
    "xlsx": "^0.18.5",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.54.2",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/formidable": "^3.4.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/pdf-parse": "^1.1.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "audit-ci": "^7.1.0",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "eslint-plugin-no-secrets": "^1.0.2",
    "eslint-plugin-security": "^3.0.1",
    "jest": "^30.0.5",
    "jest-environment-node": "^30.0.5",
    "jest-junit": "^16.0.0",
    "playwright": "^1.54.2",
    "snyk": "^1.1293.1",
    "supertest": "^7.0.0",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
