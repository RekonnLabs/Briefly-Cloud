# Railway Environment Variables Template
# Copy this file to .env.railway and fill in your actual values
# NEVER commit .env.railway with real secrets to GitHub!

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE=your_supabase_service_role_key_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# ChromaDB Configuration
CHROMA_HOST=api.trychroma.com
CHROMA_PORT=443
CHROMA_API_KEY=your_chroma_api_key_here
CHROMA_TENANT_ID=your_chroma_tenant_id_here
CHROMA_DB_NAME=Briefly Cloud

# Stripe Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=https://your-railway-app.railway.app/api/storage/google/callback

# Microsoft Azure OAuth
AZURE_CLIENT_ID=your_azure_client_id_here
AZURE_CLIENT_SECRET=your_azure_client_secret_here
AZURE_TENANT_ID=your_azure_tenant_id_here
MICROSOFT_REDIRECT_URI=https://your-railway-app.railway.app/api/storage/microsoft/callback

# Production URLs
ALLOWED_ORIGINS=https://rekonnlabs.com,https://www.rekonnlabs.com
FRONTEND_URL=https://rekonnlabs.com

# Server Configuration
ENVIRONMENT=production
DEBUG=False
LOG_LEVEL=WARNING
HOST=0.0.0.0
PORT=8000

# Security Keys (Generate new strong keys for production)
SESSION_SECRET_KEY=generate_strong_random_key_here
JWT_SECRET_KEY=generate_strong_random_key_here
ENCRYPTION_KEY=generate_strong_encryption_key_here
TOKEN_EXPIRY_HOURS=24

# Rate Limiting & Limits
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
MAX_FILE_SIZE_MB=50
MAX_FILES_PER_USER=1000

# AI Model Configuration
DEFAULT_LLM_MODEL=gpt-4-turbo
DEFAULT_LLM_TEMPERATURE=0.7
MAX_TOKENS=4000
CONTEXT_WINDOW_SIZE=8000
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_DIMENSIONS=3072

# Vector Store Configuration
VECTOR_STORE_PROVIDER=chroma
MAX_CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_DEBUG=false
ENABLE_FILE_UPLOAD=true
ENABLE_CHAT=true
ENABLE_VECTOR_SEARCH=true
ENABLE_OAUTH=true

# Database Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# Email Configuration (Mailjet)
SMTP_HOST=in-v3.mailjet.com
SMTP_PORT=587
SMTP_USERNAME=your_mailjet_username_here
SMTP_PASSWORD=your_mailjet_password_here
FROM_EMAIL=noreply@rekonnlabs.com

# Cache Configuration (Optional - for future Redis integration)
# REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=3600

# Security Settings
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8 