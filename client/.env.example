# API Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000/ws

# App Configuration
VITE_APP_NAME=Briefly Cloud
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=development

# OAuth Redirect URLs
VITE_GOOGLE_REDIRECT_URI=http://localhost:5173/auth/google/callback
VITE_MICROSOFT_REDIRECT_URI=http://localhost:5173/auth/microsoft/callback

# Stripe Public Key (Get this from your Stripe dashboard)
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true
VITE_ENABLE_PWA=true

# File Upload Configuration
VITE_MAX_FILE_SIZE_MB=50
VITE_SUPPORTED_FILE_TYPES=.pdf,.docx,.txt,.md,.csv,.xlsx,.pptx,.png,.jpg,.jpeg

# UI Configuration
VITE_THEME=light
VITE_ENABLE_DARK_MODE=true
VITE_DEFAULT_LANGUAGE=en

# Performance Settings
VITE_CHUNK_SIZE_WARNING_LIMIT=1000
VITE_ENABLE_SOURCE_MAPS=true

